<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTimeCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23-10-2020"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPllName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:lines="1"
                android:text="Pll ngày 30-10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:id="@+id/tvTimeUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã xem 20:30" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/tvCountView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="10 lượt xem" />


        </LinearLayout>


        <TextView
            android:id="@+id/tvLinkPll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="https://www.youtube.com/playlist?list=PLRvRcrkspJ9zoV02lRMjidJ5Iw9AnIE4r"
            android:textColor="#0A27E0" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent" />

</LinearLayout>